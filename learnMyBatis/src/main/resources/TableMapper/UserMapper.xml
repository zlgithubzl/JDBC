<mapper namespace="Dao.UserMapper">
    <select id="getAllToList" parameterType="Dao.UserMapper" resultType="Pojo.User">
        SELECT  * FROM user

    </select>

    <select id="getNameById" parameterType="int" resultType="java.lang.String">
        SELECT  name FROM user where id=#{id}

    </select>

    <insert id="add" parameterType="map" useGeneratedKeys="true" keyProperty="mid" keyColumn="create_time">
        <!-- 这里的参数对象里的值是可以直接使用的-->
        insert into user (name,pass) values(#{nameHAHA},#{passHAHA})

    </insert>


